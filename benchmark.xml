<?xml version="1.0" encoding="UTF-8"?>
<project name="jpbc" default="benchmark">

    <!-- Options -->

    <dirname property="basedir" file="${ant.file}"/>

    <path id="runtime.classpath">
        <pathelement location="${basedir}/jars/jpbc-api-1.0.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-plaf-1.0.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-pbc-1.0.0.jar"/>
        <pathelement location="${basedir}/jars/jna-3.1.0.jar"/>
        <pathelement location="${basedir}/jars/test/jpbc-plaf-1.0.0-tests.jar"/>
        <pathelement location="${basedir}/jars/test/jpbc-pbc-1.0.0-tests.jar"/>
    </path>

    <!-- Benchmarks -->

    <target name="benchmark">

        <echo message="Starting Benchmarks..."/>

        <java fork="true" classname="it.unisa.dia.gas.jpbc.benchmark.PBCBenchmark">
            <arg value="1000"/>
            <arg value="${basedir}/params/benchmark/a.properties"/>
            <arg value="${basedir}/params/benchmark/a1.properties"/>
            <arg value="${basedir}/params/benchmark/d_159.properties"/>
            <arg value="${basedir}/params/benchmark/d_201.properties"/>
            <arg value="${basedir}/params/benchmark/d_224.properties"/>
            <arg value="${basedir}/params/benchmark/e.properties"/>
            <arg value="${basedir}/params/benchmark/f.properties"/>
            <arg value="${basedir}/params/benchmark/g149.properties"/>
            <classpath>
                <path refid="runtime.classpath"/>
            </classpath>
        </java>

        <java fork="true" classname="it.unisa.dia.gas.jpbc.benchmark.JPBCBenchmark">
            <arg value="1000"/>
            <arg value="${basedir}/params/benchmark/a.properties"/>
            <arg value="${basedir}/params/benchmark/a1.properties"/>
            <arg value="${basedir}/params/benchmark/d_159.properties"/>
            <arg value="${basedir}/params/benchmark/d_201.properties"/>
            <arg value="${basedir}/params/benchmark/d_224.properties"/>
            <arg value="${basedir}/params/benchmark/e.properties"/>
            <arg value="${basedir}/params/benchmark/f.properties"/>
            <arg value="${basedir}/params/benchmark/g149.properties"/>
            <classpath>
                <path refid="runtime.classpath"/>
            </classpath>
        </java>
    </target>

</project>