<?xml version="1.0" encoding="UTF-8"?>
<project name="jpbc" default="benchmarker">

    <!-- Options -->

    <dirname property="basedir" file="${ant.file}"/>

    <path id="runtime.classpath">
        <pathelement location="${basedir}/jars/jpbc-api-1.2.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-plaf-1.2.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-pbc-1.2.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-crypto-1.2.0.jar"/>
        <pathelement location="${basedir}/jars/jpbc-benchmark-1.2.0.jar"/>

        <pathelement location="${basedir}/jars/jna-3.2.5.jar"/>
        <pathelement location="${basedir}/jars/bcprov-jdk16-1.46.jar"/>
    </path>

    <!-- Benchmarks -->

    <target name="benchmarker">

        <echo message="BaseDir = ${basedir}"/>
        <echo message="Starting Benchmarks..."/>

        <java fork="true" classname="it.unisa.dia.gas.jpbc.benchmark.ComparisonBenchmarker">
            <jvmarg value="-Xms512m"/>
            <jvmarg value="-Xmx1024m"/>
            <arg value="1000"/>
            <arg value="${basedir}/params/benchmarker/a.properties"/>
            <arg value="${basedir}/params/benchmarker/a1.properties"/>
            <arg value="${basedir}/params/benchmarker/d159.properties"/>
            <arg value="${basedir}/params/benchmarker/d201.properties"/>
            <arg value="${basedir}/params/benchmarker/d224.properties"/>
            <arg value="${basedir}/params/benchmarker/e.properties"/>
            <arg value="${basedir}/params/benchmarker/f.properties"/>
            <arg value="${basedir}/params/benchmarker/g149.properties"/>
            <classpath>
                <path refid="runtime.classpath"/>
            </classpath>
        </java>

    </target>

</project>