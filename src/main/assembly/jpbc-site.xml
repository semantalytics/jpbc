<assembly>
    <id>site</id>
    <formats>
        <format>dir</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>site</outputDirectory>
            <includes/>
        </fileSet>

        <fileSet>
            <directory>jpbc-api/target/site/apidocs</directory>
            <outputDirectory>site/java-docs/api</outputDirectory>
            <includes/>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>jpbc.iml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>benchmark.xml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>curvegen.xml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>./src/main/assembly/jpbc-distro.xml</source>
            <outputDirectory>./src/main/assembly/</outputDirectory>
        </file>
    </files>

</assembly>
